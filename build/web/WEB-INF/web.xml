<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    
    <!-- Servlet Definitions -->
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordPageServlet</servlet-name>
        <servlet-class>controller.ForgotPasswordPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>controller.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>controller.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>controller.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectsServlet</servlet-name>
        <servlet-class>controller.SubjectsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectDetailsServlet</servlet-name>
        <servlet-class>controller.SubjectDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseDetailsServlet</servlet-name>
        <servlet-class>controller.CourseDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterSubjectServlet</servlet-name>
        <servlet-class>controller.RegisterSubjectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LessonServlet</servlet-name>
        <servlet-class>controller.LessonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LessonListServlet</servlet-name>
        <servlet-class>controller.LessonListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LessonDetailServlet</servlet-name>
        <servlet-class>controller.LessonDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddExistingLessonServlet</servlet-name>
        <servlet-class>controller.AddExistingLessonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToggleStatusServlet</servlet-name>
        <servlet-class>controller.ToggleStatusServlet</servlet-class>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordPageServlet</servlet-name>
        <url-pattern>/forgot-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/reset-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/update-profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectsServlet</servlet-name>
        <url-pattern>/subjects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectDetailsServlet</servlet-name>
        <url-pattern>/subject-details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseDetailsServlet</servlet-name>
        <url-pattern>/course-details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterSubjectServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LessonServlet</servlet-name>
        <url-pattern>/lessons</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LessonListServlet</servlet-name>
        <url-pattern>/lesson-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LessonDetailServlet</servlet-name>
        <url-pattern>/lesson-detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddExistingLessonServlet</servlet-name>
        <url-pattern>/add-lesson</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToggleStatusServlet</servlet-name>
        <url-pattern>/toggle-status</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
